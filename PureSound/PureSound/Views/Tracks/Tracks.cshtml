<body>
    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="d-flex align-items-center slider_bg_1 overlay2" style="height:110px">
        </div>
    </div>
    <!-- slider_area_end -->
    <!-- music_area  -->
    <div class="music_area music_gallery">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-65">
                        <h3>
                            Tracks
                        </h3>
                        @if (this.User.IsInRole("Administrator"))
                        {

                            <div class="container-login100-form-btn m-t-32">
                                <a asp-controller="Tracks" asp-action="AddTrack" class="login100-form-btn">
                                    Add Track
                                </a>
                            </div>
                        }
                        <br />
                        <div style="text-align: center;">
                            <form method="get" asp-controller="Tracks" asp-action="Tracks">
                                <select id="sort" name="sortOption" class="custom-select">
                                    <option value="By Title (A-Z)">By Title (A-Z)</option>
                                    <option value="By Title (Z-A)">By Title (Z-A)</option>
                                    <option value="By Year (Newest)">By Year (Newest)</option>
                                    <option value="By Year (Oldest)">By Year (Oldest)</option>
                                    <option value="By Genre">By Genre</option>
                                </select>
                                <br />
                                <button style="margin-top:15px" type="submit" class="btn btn-primary">Sort</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row align-items-center justify-content-center mb-20">
                    <div class="col-xl-10">
                        <div class="row align-items-center">
                            <div class="col-xl-9 col-md-9">
                                <div class="music_field">
                                    <div class="thumb">
                                        <img src=@item.ImageURL style="height:100px;width:140px">
                                    </div>
                                    <div class="track_name">
                                        <div class="name">
                                            <h4>@string.Join(" & ", ViewBag.Artists) - @item.Title</h4>
                                            <p>@item.Genre.Name</p>
                                            <p style="margin-top:-10px">@item.Year</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3">
                                <div class="music_btn">
                                    <a asp-controller="Tracks" asp-action="EachTrack" asp-route-id="@item.Id" class="boxed-btn">See More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- music_area end  -->
