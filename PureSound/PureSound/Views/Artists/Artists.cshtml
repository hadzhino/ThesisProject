@using PureSound.Models.ViewModels;
@model List<ArtistVM>

@{
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<title>Artists</title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="manifest" href="site.webmanifest">
<link rel="shortcut icon" type="image/x-icon" href="~/img/icon.ico">
<!-- Place favicon.ico in the root directory -->
<!-- CSS here -->
<link rel="stylesheet" href="~/css/musico-master/css/style.css">
<link rel="stylesheet" href="~/css/user-profile-page-template-in-html-css/css/style.css">
<link rel="stylesheet" href="~/css/musico-master/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/musico-master/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/css/musico-master/css/magnific-popup.css">
<link rel="stylesheet" href="~/css/musico-master/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/musico-master/css/themify-icons.css">
<link rel="stylesheet" href="~/css/musico-master/css/nice-select.css">
<link rel="stylesheet" href="~/css/musico-master/css/audioplayer.css">
<link rel="stylesheet" href="~/css/musico-master/css/flaticon.css">
<link rel="stylesheet" href="~/css/musico-master/css/gijgo.css">
<link rel="stylesheet" href="~/css/musico-master/css/animate.css">
<link rel="stylesheet" href="~/css/musico-master/css/slick.css">
<link rel="stylesheet" href="~/css/musico-master/css/slicknav.css">
<link rel="stylesheet" href="~/css/musico-master/css/responsive.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'>
<link rel="stylesheet" href="~/css/StyleSheet.css">



<body>
    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="d-flex align-items-center slider_bg_1 overlay2" style="height:110px">
        </div>
    </div>
    <!-- slider_area_end -->
    <!-- music_area  -->
    <div class="music_area music_gallery">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-65">
                        <h3>
                            Artists
                        </h3>
                        @if (this.User.IsInRole("Administrator"))
                        {

                            <div class="container-login100-form-btn m-t-32">
                                <a asp-controller="Artists" asp-action="AddArtist" class="login100-form-btn">
                                    Add Artist
                                </a>
                            </div>
                        }
                        <br />
                        <div style="text-align: center;">
                            <form method="get" asp-controller="Artists" asp-action="Artists">
                                <select id="sort" name="sortOption" class="custom-select">
                                    <option value="By Username (A-Z)">By Username (A-Z)</option>
                                    <option value="By Username (Z-A)">By Username (Z-A)</option>
                                    <option value="By Genre">By Genre</option>
                                </select>
                                <br />
                                <button style="margin-top:15px" type="submit" class="btn btn-primary">Sort</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row align-items-center justify-content-center mb-20">
                    <div class="col-xl-10">
                        <div class="row align-items-center">
                            <div class="col-xl-9 col-md-9">
                                <div class="music_field">
                                    <div class="thumb">
                                        <img src="@item.ImageURL" style="height:100px;width:100px; border-radius: 100px">
                                    </div>
                                    <div class="audio_name">
                                        <div class="name">
                                            <h4>@item.Username</h4>
                                            <p>@item.Genre.Name</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3">
                                <div class="music_btn">
                                    <a asp-controller="Artists" asp-action="EachArtist" asp-route-id="@item.Id" class="boxed-btn">See More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- music_area end  -->
    <!-- link that opens popup -->
    <!-- JS here -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous">
    </script>
    <style>
        /* Custom styles for select dropdown */
        .custom-select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 8px 16px;
            width: 200px;
            font-size: 16px;
            cursor: pointer;
        }

        /* Style for button */
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</body>