<link rel="stylesheet" href="~/css/StyleSheet.css">


<form>
    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid">
                    <div class="header_bottom_border">
                        <div class="row align-items-center">
                            <div class="col-xl-3 col-lg-2">
                                <div class="logo">
                                    <a asp-controller="Home" asp-action="Index">
                                        <img src="~/img/logo.png" style="height:40px; width:160px">
                                    </a>
                                </div>
                            </div>

                            <div class="col-xl-6 col-lg-7">
                                <div class="main-menu  d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a asp-controller="Blog" asp-action="Index">blog</a></li>
                                            @if (this.User.Identity.IsAuthenticated)
                                            {
                                                <li>
                                                    <a href="#">pages <i class="ti-angle-down"></i></a>
                                                    <ul class="submenu">
                                                        <li><a asp-controller="Pages" asp-action="Artists">Artists</a></li>
                                                        <li><a asp-controller="Pages" asp-action="Tracks">Tracks</a></li>
                                                    </ul>
                                                </li>
                                            }
                                            <li>
                                                <a href="#"> Profile <i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    @if (!User.Identity!.IsAuthenticated)
                                                    {
                                                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                                                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="MyProfile">My Profile</a></li>
                                                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                                    }
                                                </ul>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <form method="post" asp-controller="Pages" asp-action="SerachArtist">
                                <div class="search-box">
                                    <button class="btn-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <input type="text" class="input-search" placeholder="Type to Search...">

                                </div>
                            </form>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>
</form>

<body>
    <!-- slider_area_start -->
    <div class="slider_area">
        <div class="d-flex align-items-center slider_bg_1 overlay2" style="height:110px">
        </div>
    </div>
    <!-- slider_area_end -->
    <!-- music_area  -->
    <div class="music_area music_gallery">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-65">
                        <h3>
                            Artists
                        </h3>
                        @if (this.User.IsInRole("Administrator"))
                        {

                            <div class="container-login100-form-btn m-t-32">
                                <a asp-controller="Pages" asp-action="AddArtist" class="login100-form-btn">
                                    Add Artist
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row align-items-center justify-content-center mb-20">
                    <div class="col-xl-10">
                        <div class="row align-items-center">
                            <div class="col-xl-9 col-md-9">
                                <div class="music_field">
                                    <div class="thumb">
                                        <img src="@item.ImageURL" style="height:100px;width:100px; border-radius: 100px">
                                    </div>
                                    <div class="audio_name">
                                        <div class="name">
                                            <h4>@item.Username</h4>
                                            <p></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3">
                                <div class="music_btn">
                                    <a asp-controller="Pages" asp-action="EachArtist" asp-route-id="@item.Id" class="boxed-btn">See More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- music_area end  -->
    <!-- link that opens popup -->
