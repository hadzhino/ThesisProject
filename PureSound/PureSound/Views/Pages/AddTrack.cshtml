<div class="single_slider  d-flex align-items-center slider_bg_1 overlay2">
    <div class="limiter">
        <div class="container-login100" style="background-image: url('slider_bg_1 overlay2');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <br /><br />
                <span class="login100-form-title p-b-41">
                    Add Track
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5" method="post" asp-action="AddTrack">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="wrap-input100 validate-input" data-validate="Enter title">
                        <input asp-for="Title" class="input100" placeholder="Title">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter year">
                        <input asp-for="Year" class="input100" placeholder="Year">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Artists">
                        <label for="artists" style="position:center">Artists:</label>
                        <select asp-items="@ViewBag.Artists" id="artists" asp-for="ArtistsIds" multiple class="input100">
                        </select>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Genre">
                        <label class="form-label" style="position:center">Genre</label>
                        <select asp-for="GenreId" asp-items="@ViewBag.GenreId" class="input100" placeholder="Genre"></select>
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter Image URL">
                        <input asp-for="ImageURL" class="input100" placeholder="Image URL">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter lyrics">
                        <input asp-for="Lyrics" class="input100" placeholder="Lyrics">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter YouTube URL">
                        <input asp-for="YouTubeURL" class="input100" placeholder="YouTube URL">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn">
                            Add Track
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>


